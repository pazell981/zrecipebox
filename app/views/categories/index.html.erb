		<h4><%= current_user.first_name %>'s Category List</h4>
		<%= button_to "Add a Category", new_category_path, :class => 'success button right', :method => :get %>
		<table>
			<thead>
				<tr>
					<th>Category</th>
					<th col_span='2'>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% if @categories %>
					<% @categories.each do |category| %>
						<tr>
							<td><%= category.category %></td>
							<td>
								<div class='button-group radius'>
									<%= button_to "Edit", edit_category_path(category.id), :class => "small button", :method => :get %>
									<a href="#" data-reveal-id="modal<%= category.id %>"><button class="small button alert" >Delete</button></a>
								</div>
								<div id="modal<%= category.id %>" class="reveal-modal" data-reveal>
								  <h2>Are you sure you want to delete this category?</h2>
								  <p>Once <%= category.category %> is deleted it can not be reversed.</p>
								  <%= button_to "Delete", category_path(category.id), :method=>:delete, :class => "large button alert right" %>
								  <a class="close-reveal-modal">&#215;</a>
								</div>
							</td>
						</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="content" id="panel2">

	</div>
</div>